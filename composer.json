{
    "name": "mikrofraim/mikrofraim",
    "type": "project",
    "description": "small framework",
    "keywords": [ "framework", "mikrofraim" ],
    "homepage": "https://github.com/mikrofraim/mikrofraim",
    "license": "MIT",
    "minimum-stability": "dev",
    "require": {
        "php": ">=8",
        "mikrofraim/framework-core": "0.0.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.5",
        "friendsofphp/php-cs-fixer": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "cs-fixer": [
            "php-cs-fixer fix --diff --verbose ; rm .php-cs-fixer.cache"
        ],
        "phpstan": [
            "phpstan analyze --level 6 app/"
        ]
    }
}
